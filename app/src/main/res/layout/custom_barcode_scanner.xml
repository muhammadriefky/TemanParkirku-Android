<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Ini adalah permukaan pratinjau kamera utama -->
    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/zxing_barcode_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Ini adalah Viewfinder (kotak di tengah layar) yang menunjukkan area pemindaian QR -->
    <com.journeyapps.barcodescanner.ViewfinderView
        android:id="@+id/zxing_viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Ini adalah teks status yang biasanya menampilkan pesan seperti "Arahkan kamera ke QR Code" -->
    <TextView
        android:id="@+id/zxing_status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@android:color/transparent"
        android:text="@string/zxing_msg_default_status"
        android:textColor="@android:color/white"
        android:padding="10dp" />

</merge>